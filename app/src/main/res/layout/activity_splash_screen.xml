<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightcolor"
    android:orientation="vertical"
    tools:context=".ui.splashScreen">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sg1"
        android:alpha="0.15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/screwylogo"
            android:layout_width="@dimen/_78sdp"
            android:layout_height="@dimen/_78sdp"
            android:contentDescription="@string/todo"
            android:src="@drawable/screwy_logo"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/screwy_text"
            android:layout_marginBottom="-20dp"/>

        <ImageView
            android:id="@+id/screwy_text"
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_78sdp"
            android:src="@drawable/screwy"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/eternity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:fontFamily="@font/gabriela"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorPrimaryHighlight"
            android:text="@string/eternity"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>