<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:paddingBottom="@dimen/cardview_compat_inset_shadow"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        app:cardBackgroundColor="@color/incog_primaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_8sdp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_39sdp"
                android:layout_height="@dimen/_39sdp"
                android:src="@color/colorPrimaryDark"
                android:layout_alignTop="@+id/ll_detail_container"
                android:layout_alignBottom="@id/ll_detail_container"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/status"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:src="@color/colorAccent" />

            <LinearLayout
                android:id="@+id/ll_detail_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_marginStart="@dimen/_8sdp">
                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_bold"
                    android:text="@string/username"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/lastmessage"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_italic"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>


            <TextView
                android:id="@+id/msg_count"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_17sdp"
                android:paddingStart="@dimen/_1sdp"
                android:textSize="@dimen/_13sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>