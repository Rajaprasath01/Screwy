<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:paddingBottom="@dimen/cardview_compat_inset_shadow"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_1sdp"

        app:cardBackgroundColor="@color/incog_primaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_8sdp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_39sdp"
                android:layout_height="@dimen/_39sdp"
                android:src="@color/colorPrimaryDark"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/status"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:src="@color/colorAccent"
                />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@+id/profile_image"
                android:fontFamily="@font/oleo_script_swash_caps"
                android:text="@string/username"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/lastmessage"
                android:layout_width="@dimen/_117sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toEndOf="@+id/profile_image"
                android:fontFamily="@font/caveat_bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/msg_count"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_17sdp"
                android:paddingStart="@dimen/_1sdp"
                android:textSize="@dimen/_13sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>